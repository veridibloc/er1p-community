{
  "name": "@er1p/race-indexer-db",
  "version": "0.1.0",
  "description": "Database schema and client for ER1P race indexer",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm --sourcemap=external && bun run build:types",
    "build:types": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "test": "bun test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/veridibloc/er1p-community.git",
    "directory": "packages/race-indexer-db"
  },
  "keywords": [
    "er1p",
    "race",
    "indexer",
    "database",
    "drizzle",
    "libsql",
    "sqlite"
  ],
  "author": "ER1P Community",
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "drizzle-orm": "^0.36.4"
  },
  "devDependencies": {
    "@er1p/typescript-config": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0"
  }
}
