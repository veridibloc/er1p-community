{
  "name": "@er1p-community/race-indexer-db",
  "version": "0.1.9",
  "description": "Database schema and client for ER1P race indexer",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": "false",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/veridibloc/er1p-community.git",
    "directory": "packages/race-indexer-db"
  },
  "keywords": [
    "er1p",
    "race",
    "indexer",
    "database",
    "drizzle",
    "libsql",
    "sqlite"
  ],
  "author": "ohager",
  "license": "MIT",
  "peerDependencies": {
    "@libsql/client": ">=0.15.0",
    "drizzle-orm": ">=0.44.0"
  },
  "peerDependenciesMeta": {
    "@libsql/client": {
      "optional": false
    },
    "drizzle-orm": {
      "optional": false
    }
  },
  "devDependencies": {
    "@er1p-community/typescript-config": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "drizzle-kit": "^0.31.6",
    "@libsql/client": "^0.15.15",
    "drizzle-orm": "^0.44.7"
  },
  "turbo": {
    "tasks": {
      "build": {
        "outputs": [
          "dist/**"
        ]
      }
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
