{
  "name": "@er1p-community/race-indexer-db",
  "version": "0.1.8",
  "description": "Database schema and client for ER1P race indexer",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "private": "false",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist",
    "prepublishOnly": "bun run clean && bun run build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/veridibloc/er1p-community.git",
    "directory": "packages/race-indexer-db"
  },
  "keywords": [
    "er1p",
    "race",
    "indexer",
    "database",
    "drizzle",
    "libsql",
    "sqlite"
  ],
  "author": "ohager",
  "license": "MIT",
  "dependencies": {
    "@libsql/client": "^0.14.0",
    "drizzle-orm": "^0.36.4"
  },
  "devDependencies": {
    "@er1p-community/typescript-config": "workspace:*",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "drizzle-kit": "^0.31.6"
  },
  "turbo": {
    "tasks": {
      "build": {
        "outputs": ["dist/**"]
      }
    }
  },
  "publishConfig": {
    "access": "public"
  }
}
