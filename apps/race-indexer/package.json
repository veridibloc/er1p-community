{
  "name": "race-indexer",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun run index.ts",
    "start": "bun run index.ts",
    "typecheck": "tsc --noEmit",
    "build": "bun run typecheck && bun build ./index.ts --target=bun --outfile dist/race-indexer.js",
    "compile": "bun build ./index.ts --compile --outfile race-indexer",
    "compile:linux": "bun build ./index.ts --compile --target=bun-linux-x64 --outfile race-indexer-linux",
    "compile:windows": "bun build ./index.ts --compile --target=bun-windows-x64 --outfile race-indexer-windows.exe",
    "compile:macos": "bun build ./index.ts --compile --target=bun-darwin-x64 --outfile race-indexer-macos",
    "compile:all": "bun run compile:linux && bun run compile:windows && bun run compile:macos",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:drop": "drizzle-kit drop"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.6"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@er1p-community/event-ledger": "workspace:*",
    "@er1p-community/race-indexer-db": "workspace:*",
    "@signumjs/core": "2",
    "@signumjs/util": "^3.0.1",
    "croner": "^9.1.0",
    "signum-chain-walker": "^1.0.8"
  }
}
